<body>
    
    
           <div class="hero">
    
    <img style="border-radius: 50%;" src="https://images-platform.99static.com/87YaQkIAAaDboDWSPyh6s97qh70=/274x0:1688x1414/500x500/top/smart/99designs-contests-attachments/59/59824/attachment_59824278">
    <form action="/userlist" method="POST"  >
        <h1>Proceed To Check_In</h1>
        <div class="form-group col-md-3  form-inline">
        <label for="name"><i class="fas fa-user">&nbsp;&nbsp;</i></label>
            <input type="text" for="name" class="form-control" id="name" name="name" placeholder="Name of Visitor">
        
        </div>
        <div class="form-group col-md-3  form-inline">
        <label for="phone_number"><i class="fas fa-phone-square-alt">&nbsp;&nbsp;</i></label>
        <input type="text"class="form-control"  name="phone_number" for="phone_number" placeholder="Phone Number">
        </div>
        <div class="form-group col-md-3  form-inline">
        <label for="email" ><i class="fas fa-envelope">&nbsp;&nbsp;</i></label>
        <input type="text" class="form-control" name="email" for="email" placeholder="Email" required>
        </div>
        
        <div class="form-group col-md-3  form-inline">
        <label for="check_in" ><i class="fas fa-clock">&nbsp;&nbsp;</i></label>
        <input type="text"class="form-control" name="check_in" for="check_in" placeholder="Check_In_Time">
        </div>
        <div class="form-group col-md-3  form-inline">
        <label for="address" ><i class="fas fa-map-marker-alt">&nbsp;&nbsp;</i></label>
        <input type="text" class="form-control" name="address" for="address" placeholder="address">
        </div>
        <div class="form-group col-md-3  form-inline">
        <label for="date" ><i class="fas fa-calendar-alt">&nbsp;&nbsp;</i></label>
        <input type="date" class="form-control" name="date" for="date" placeholder="date"> 
        </div>
        
        <!-- <button type="button" class="btn btn-primary btn-lg" type="submit">Check In</button> -->
        <button class="btn btn-primary btn-lg" type="submit">Check In</button>
    </form>
</div>
